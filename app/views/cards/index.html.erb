<div class="card-show">
  <%= render partial: "header"%>
  <div class="show-main">
    <div class="main-box">
      <h2 class="card-title">クレジットカード</h2>
      <div class="Card_subtitle">
        <h3>登録カード情報</h3>
      </div>
      <% if @card.present? %>
        <div class="Card_info">
          <p>カード番号: <%= "**** **** **** " + @card[:last4] %></p>
          <p>有効期限: <%= @card[:exp_month] %>/<%= @card[:exp_year] %></p>
        </div>
        <%= link_to '登録カードを削除', card_path(@user.card.id), method: :delete, class:"card-delete" %>
      <% else %>
        <div class="no_Card_info">
          <p class="no_Card_message">クレジットカードは登録されていません<p>
          <p class="no_Card_registration"><i class="far fa-credit-card"></i><%= link_to 'クレジットカードを登録', new_card_path %></p>
        </div>
      <% end %>
      <%= link_to '戻る', 'javascript:history.back()', class:"back-link" %>
    </div>
  </div>
  <%= render partial: "footer"%>
</div>