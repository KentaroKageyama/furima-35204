<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @item.name %>
    </h2>
    <div class="item-img-content">
      <% if Order.find_by(item_id: @item.id) == nil %>
        <div class="slider">
          <% @item.images.each do |image| %>
            <%= image_tag image, class:"item-box-img" %>
          <% end %>
        </div>
      <% else %>
        <%= image_tag @item.images[0], class:"item-box-img" %>
        <div class="sold-out">
          <span>Sold Out!!</span>
        </div>
      <% end %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
        <%= "¥ #{@item.price}" %>
      </span>
      <span class="item-postage">
        <%= @item.shipping_fee.name %>
      </span>
    </div>

    <% if user_signed_in? && Order.find_by(item_id: @item.id) == nil %>
      <% if current_user.id == @item.user.id %>
        <%= link_to "商品の編集", edit_item_path(@item.id), method: :get, class: "item-red-btn" %>
        <p class="or-text">or</p>
        <%= link_to "削除", item_path(@item.id), method: :delete, class:"item-destroy" %>
      <% else %>
          <%= link_to "購入画面に進む", item_orders_path(@item.id) ,class:"item-red-btn"%>
      <% end %>
    <% end %>


    <div class="item-explain-box">
      <span><%= @item.description %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= @item.user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">商品の状態</th>
          <td class="detail-value"><%= @item.condition.name %></td>
        </tr>
        <tr>
          <th class="detail-item">配送料の負担</th>
          <td class="detail-value"><%= @item.shipping_fee.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送元の地域</th>
          <td class="detail-value"><%= @item.shipping_add.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送日の目安</th>
          <td class="detail-value"><%= @item.shipping_day.name %></td>
        </tr>
      </tbody>
    </table>
    <div class="option">
    <%# お気に入り登録 %>
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <% if user_signed_in? %>
          <% if @item.favorites.where(user_id: current_user.id).exists? %>
            <p><span>お気に入り数1: </span><%=link_to @item.favorites.count, item_favorite_path(@item.id), method: :delete %></p>
          <% else %>
            <p><span>お気に入り数2: </span><%=link_to @item.favorites.count, item_favorites_path(@item.id), method: :post %></p>
          <% end %>
        <% else %>
          <p><span>お気に入り数3: </span><%= @item.favorites.count %></p>
        <% end %>
      </div>
    <%# /お気に入り登録 %>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な商品の通報</span>
      </div>
    </div>
  </div>
  <%# /商品の概要 %>

  <%# コメント欄 %>
  <div class="comment-box">
    <div id='messages'>
      <% @item.messages.each do |message| %>
        <div class="message-container">
          <div class="message-nickname">
            <p>
            <%= message.user.nickname %>
            <% if message.user.id == @item.user_id %>
              <span class="message-item-owner">出品者</span>
            <% end %>
            </p>
          </div>
          <div class="message-box">
            <div class="message-text">
              <p><%= message.content %></p>
            </div>
            <div class="message-created-at">
            <p><%= l message.created_at %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= form_with model: [@item, @message], url: item_messages_path(@item.id), method: :post do |f| %>
      <%= f.text_area :content, class:"comment-text", id:"message_text" %>
      <p class="comment-warn">
        相手のことを考え丁寧なコメントを心がけましょう。
        <br>
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
      </p>
      <% if user_signed_in? %>
        <% if Order.find_by(item_id: @item.id) == nil %>
          <%# <%= image_tag "comment.png" ,class:"comment-flag-icon" ,width:"20",height:"25"%> 
          <%= f.submit 'コメントする', class:"comment-btn" %>
        <% else %>
          <p class="comment-nobtn">売り切れのためコメントできません</p>
        <% end %>
      <% else %>
        <p class="comment-nobtn">ログインユーザーのみコメントできます</p>
      <% end %>
    <% end %>
  </div>
  <%# /コメント欄 %>

  <div class="links">
    <a href="#" class="change-item-btn">
      ＜ 前の商品
    </a>
    <a href="#" class="change-item-btn">
      後ろの商品 ＞
    </a>
  </div>
  <a href="#" class="another-item"><%= @item.category.name %>をもっと見る</a>
</div>

<%= render "shared/footer" %>
